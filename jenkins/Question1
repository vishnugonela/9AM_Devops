pipeline
{
    agent any

    stages
     {
        stage('Get Server Details') 
          {
            steps 
             {

                sh '''
                    echo "Printing Server Details...."
                    echo "Hostname: $(hostname)"
                    echo "system detais: $(uname -a)"
                    echo "IP Address: $(hostname -I)"
                    echo " Free Memory available:"
                    free -m
                   
                '''
            }
        }
    }
}
